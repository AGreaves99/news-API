{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object with article_id matching the one from the endpoint",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Article title",
        "topic": "topic",
        "author": "author_name",
        "body": "article_contents",
        "created_at": "2017-07-09T21:11:00.000Z",
        "votes": 10,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for a given article_id",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 9,
          "body": "Superficially charming",
          "article_id": 1,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-01-01T03:08:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Creates a new comment with the respective article_id",
    "exampleRequestBody": {
      "username": "butter_bridge",
      "body": "This is a good article"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 9,
        "body": "Superficially charming",
        "article_id": 1,
        "author": "icellusedkars",
        "votes": 0,
        "created_at": "2020-01-01T03:08:00.000Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Increments an article's votes by the amount given in request body",
    "exampleRequestBody": {
      "inc_votes": 2
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 9,
        "body": "Superficially charming",
        "article_id": 1,
        "author": "icellusedkars",
        "votes": 2,
        "created_at": "2020-01-01T03:08:00.000Z"
      }
    }
  }
}
